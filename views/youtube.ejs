<% layout('layout') %>
<div class="jumbotron">
  <h3>YOUTUBE 동영상 주소로 동영상 다운로드하는 페이지입니다.</h3>
  <p>...</p>
  <p><a class="btn btn-primary btn-lg" href="/" role="button">메인으로 가기</a></p>
</div>
<div class="row">
  <div class="col-lg-12">
  	<form role="search" class="col-lg-6">
	    <div class="input-group">
	      <input type="text" class="form-control urlLink" placeholder="Search for..." name="videoURL">
	      <span class="input-group-btn">
	        <button class="btn btn-default downBtn" type="button">다운로드하기</button>
	      </span>
	    </div><!-- /input-group -->
	</form>
  </div><!-- /.col-lg-12 -->
</div>
<div class="success"></div>
<script>
	$(".downBtn").click(function(){
	    // $(".panel-group").html("");
	  $.post("/youtube",{'url':$(".urlLink").val()},function(result){
	    if(result){
	    	$(".success").text(result['url']+"다운로드 완료되었습니다~~");
	    }
	     
	     // console.log();
	  });
	});

</script>